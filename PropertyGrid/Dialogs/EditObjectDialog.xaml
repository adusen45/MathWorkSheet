<Window xmlns:PropertyGrid="clr-namespace:PropertyGrid"  x:Class="EditObjectDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="EditObjectDialog" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />

        </Grid.RowDefinitions>

        <PropertyGrid:PropertyGridControl Grid.Row="0" x:Name="pGrid"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Content="Cancel" Width="50" Margin="2" Click="Button_Click_1" />
            <Button Content="OK" Width="50" Margin="2" Click="Button_Click"/>

        </StackPanel>

    </Grid>
</Window>
