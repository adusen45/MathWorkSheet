<Window x:Class="GeneratedQuestionsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="GeneratedQuestionsWindow" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition  Height="Auto"/>

        </Grid.RowDefinitions>

        <GroupBox  Grid.Row="0" Header="Questions Generated">
            <FlowDocumentScrollViewer Name="docContainer">
                <FlowDocument Name="myDocument">

                </FlowDocument>
            </FlowDocumentScrollViewer>
        </GroupBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="Print" Click="Button_Click_1"  />
            <Button  Content="Close" Click="Button_Click" />

        </StackPanel>

    </Grid>
</Window>
